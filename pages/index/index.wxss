/**index.wxss**/

page{
  height: 100%;
}
.container{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;

  height: 100%;
}

.fly_container{
  height: 100rpx;
  width: 100rpx;
  position: relative;

  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.fly_container .round{
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
    position: absolute;  
    top:0rpx;
    left:0rpx;

    line-height: 100rpx;
}

.fly_container .image_container{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  height: 100rpx;
  width: 100rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}